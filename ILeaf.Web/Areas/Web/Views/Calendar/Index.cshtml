
@{
    ViewBag.Title = "我的日历";
}

@Styles.Render("~/Content/Calendar")
<div id="calendar"></div>
<div class="modal fade" id="mdlAddAppointment" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title" id="myModalLabel">添加日程</h4>
            </div>
            @model ILeaf.Web.Areas.Web.Models.AddOrModifyAppointmentViewModel
            @using (Html.BeginForm("UpdateAppointment", "Calendar", FormMethod.Post, new { id = "frmAddEvent", @class = "modal-body form-horizontal", enctype = "application/x-www-form-urlencoded" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.Title, new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Details, new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.TextAreaFor(m => m.Details, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.IsAllDay, new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        <div class="checkbox">
                            <label>
                                @Html.CheckBoxFor(m => m.IsAllDay, new { @class = "uniform" })
                            </label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.StartDate, new { @class = "control-label col-lg-4" })
                    <div class="col-lg-3">
                        @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", data_date_format = "yyyy-mm-dd" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.StartTime, new { @class = "control-label col-lg-4" })
                    <div class="col-lg-3">
                        <div class="input-group bootstrap-timepicker">
                            @Html.TextBoxFor(m => m.StartTime, new { @class = "timepicker-24 form-control" })
                        </div>
                    </div>
                </div>


                <div class="form-group">
                    @Html.LabelFor(m => m.EndDate, new { @class = "control-label col-lg-4" })
                    <div class="col-lg-3">
                        @Html.TextBoxFor(m => m.EndDate, new { @class = "form-control", data_date_format = "yyyy-mm-dd" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.EndTime, new { @class = "control-label col-lg-4" })
                    <div class="col-lg-3">
                        <div class="input-group bootstrap-timepicker">
                            @Html.TextBoxFor(m => m.EndTime, new { @class = "timepicker-24 form-control" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Visiblity, new { @class = "control-label col-lg-4" })
                    <div class="col-lg-8">
                        @Html.DropDownListFor(x => x.Visiblity, new List<SelectListItem>()
                        {
                            new SelectListItem() { Text = "公开", Value = "0" },
                            new SelectListItem() { Text = "同班、同组及好友", Value = "1" },
                            new SelectListItem() { Text = "同组及好友", Value = "2" },
                            new SelectListItem() { Text = "仅好友", Value = "3" },
                            new SelectListItem() { Text = "私密", Value = "4" }
                        }, new { @class = "form-control" })
                    </div>
                </div>

                <button id="hiddenSubmit" type="submit" style="display:none;">Asuna is the best girl.</button>
            }
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                <button type="button" class="btn btn-success" onclick="submitEvent();" data-dismiss="modal">确定</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
@Scripts.Render("~/Scripts/Calendar")

