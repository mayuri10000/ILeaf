@model ILeaf.Web.Areas.Web.Models.RegisterViewModel
    @{
        Layout = "~/Areas/Web/Views/Shared/_Login.cshtml";
        ViewBag.Title = "用户注册";
    }


    <div>
        <div id="wizard">
            <h2> 创建用户 </h2>
            <section>

                <div>
                    <div class="form-group">
                        @Html.Bootstrap().LabelFor(m => m.UserName)
                        @Html.Bootstrap().TextBoxFor(m => m.UserName).Placeholder("6-20个字符，可包含汉字、字母及数字，不得包含特殊字符")
                        @Html.ValidationMessageFor(m => m.UserName)
                    </div>

                    <div class="form-group">
                        @Html.Bootstrap().LabelFor(m => m.Password)
                        @Html.Bootstrap().PasswordFor(m => m.Password).Placeholder("6-20个字符，不得包含全角字符")
                        @Html.ValidationMessageFor(m => m.Password)
                    </div>
                    <div class="form-group">
                        @Html.Bootstrap().LabelFor(m => m.ReTypePassword)
                        @Html.Bootstrap().PasswordFor(m => m.ReTypePassword).Placeholder("请重新输入密码")
                        @Html.ValidationMessageFor(m => m.ReTypePassword)
                    </div>
                    <div class="form-group">
                        @Html.Bootstrap().LabelFor(m => m.EMail)
                        @Html.Bootstrap().TextBoxFor(m => m.EMail).Placeholder("请输入您的邮箱地址")
                        @Html.ValidationMessageFor(m => m.EMail)
                    </div>


                </div>

            </section>

            <h2> 完善信息 </h2>
            <section>
                <div>
                    <div class="form-group">
                        @Html.Bootstrap().LabelFor(m => m.SchoolName)
                        @Html.Bootstrap().TextBoxFor(m => m.SchoolName).Placeholder("请输入您的学校名称").Id("schoolName")
                        @Html.ValidationMessageFor(m => m.SchoolName)
                    </div>
                    <div class="form-group">
                        @Html.Bootstrap().LabelFor(m => m.RealName)
                        @Html.Bootstrap().TextBoxFor(m => m.RealName).Placeholder("真实姓名")
                        @Html.ValidationMessageFor(m => m.RealName)
                    </div>
                    <div class="form-group">
                        @Html.Bootstrap().LabelFor(m => m.Gender)
                        @Html.Bootstrap().DropDownListFor(m => m.Gender, new List<SelectListItem>()
                        {
                            new SelectListItem() { Text = "男",Value = "Male" },
                            new SelectListItem() { Text = "女",Value = "Female" },
                        })
                        @Html.ValidationMessageFor(m => m.Gender)
                    </div>
                    <div class="form-group">
                        @Html.Bootstrap().LabelFor(m => m.UserType)
                        @Html.Bootstrap().DropDownListFor(m => m.UserType, new List<SelectListItem>()
                        {
                            new SelectListItem() { Text = "学生",Value = "Student" },
                            new SelectListItem() { Text = "教师",Value = "Teacher" },
                        })
                        @Html.ValidationMessageFor(m => m.UserType)
                    </div>
                    <div class="form-group">
                        @Html.Bootstrap().LabelFor(m => m.ClassName)
                        @Html.Bootstrap().TextBoxFor(m => m.ClassName).Placeholder("请输入班级号，教师不填")
                        @Html.ValidationMessageFor(m => m.ClassName)
                    </div>
                    <div class="form-group">
                        @Html.Bootstrap().LabelFor(m => m.SchoolCardNum)
                        @Html.Bootstrap().TextBoxFor(m => m.SchoolCardNum).Placeholder("请输入校园卡号")
                        @Html.ValidationMessageFor(m => m.SchoolCardNum)
                    </div>

                </div>
            </section>

            
            <h2>用户协议</h2>
            <section>
                <p style="text-align:justify;color:gray;">
                    <b> Agreement & Declaration</b>
                    <br />
                    <br /> Morbi ornare tellus at elit ultrices id dignissim lorem elementum. Sed eget nisl at justo condimentum
                    dapibus. Fusce eros justo, pellentesque non euismod ac, rutrum sed quam. Ut non mi tortor. Vestibulum
                    eleifend varius ullamcorper. Aliquam erat volutpat.
                    <br />
                    <br /> Donec diam massa, porta vel dictum sit amet, iaculis ac massa. Sed elementum dui commodo lectus sollicitudin
                    in auctor mauris venenatis. Quisque at sem turpis, id sagittis diam. Suspendisse malesuada eros posuere
                    mauris vehicula vulputate. Aliquam sed sem tortor. Quisque sed felis ut mauris feugiat iaculis nec ac
                    lectus. Sed consequat vestibulum purus, imperdiet varius est pellentesque vitae. Suspendisse consequat
                    cursus eros, vitae tempus enim euismod non. Nullam ut commodo tortor.
                    <br />

                    <div class="form-group">
                        @Html.Bootstrap().LabelFor(m => m.VerificationCode)
                        <table>
                            <tr>
                                <td>
                                    @Html.Bootstrap().TextBoxFor(m => m.VerificationCode).Placeholder("请输入图片中的字符")
                                </td>
                                <td>
                                    <img src="@Url.Action("VerificationCode","Login")" />
                                </td>
                            </tr>
                        </table>
                        @Html.ValidationMessageFor(m => m.VerificationCode)
                    </div>

                </p>
            </section>
        </div>
    </div>
<script>

</script>
